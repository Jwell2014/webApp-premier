{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}


    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>
                    <button><a href="{{ path('category_show', {'id': category.id}) }}">show</a></button>
                    <button><a href="{{ path('category_edit', {'id': category.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<button><a href="{{ path('category_new') }}">Create new</a></button>
{% endblock %}
